<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.freelanceflow_desktop.FreelancerSignupController"
            prefWidth="420"
            prefHeight="600"
            style="-fx-background-color: white;">

    <VBox alignment="TOP_CENTER"
          spacing="16"
          AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="25"
          AnchorPane.rightAnchor="25"
          AnchorPane.bottomAnchor="25">

        <!-- App Title -->
        <Text text="FreeLanceFlow"
              fill="#2B8994"
              style="-fx-font-size: 36px; -fx-font-weight: bold;"/>

        <!-- Subtitle -->
        <Text text="Sign up to find work you love!"
              fill="#555555"
              style="-fx-font-size: 16px;"
              textAlignment="CENTER"
              wrappingWidth="350"/>

        <!-- Spacer -->
        <Region prefHeight="10"/>

        <!-- First Name -->
        <Label text="First Name"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <TextField fx:id="firstNameField"
                   promptText="Enter your first name"
                   prefHeight="42"
                   style="-fx-font-size: 14px;"/>

        <!-- Last Name -->
        <Label text="Last Name"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <TextField fx:id="lastNameField"
                   promptText="Enter your last name"
                   prefHeight="42"
                   style="-fx-font-size: 14px;"/>

        <!-- Email -->
        <Label text="Email"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <TextField fx:id="emailField"
                   promptText="Enter your email"
                   prefHeight="42"
                   style="-fx-font-size: 14px;"/>

        <!-- Password -->
        <Label text="Password"
               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <PasswordField fx:id="passwordField"
                       promptText="8 or more characters"
                       prefHeight="42"
                       style="-fx-font-size: 14px;"/>

        <!-- Spacer -->
        <Region prefHeight="10"/>

        <!-- Create Account Button -->
        <Button fx:id="createAccountButton"
                text="Create Account"
                onAction="#onCreateAccount"
                prefHeight="55"
                maxWidth="Infinity"
                style="-fx-background-color: black;
                       -fx-text-fill: white;
                       -fx-font-size: 18px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 12;"/>

    </VBox>

</AnchorPane>
